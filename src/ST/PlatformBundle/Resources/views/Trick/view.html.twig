{% extends "STPlatformBundle::layout.html.twig" %}

{% block title %}{{ trick.name }} - {{ parent() }}{% endblock %}

{% block stplatform_body %}
    {#Si l’utilisateur est connecté, il pourra cliquer sur :
    une petit icône en forme de stylo situé juste à côté du nom qui redirigera l’utilisateur vers un formulaire de modification de figure ;
    une corbeille située juste à côté du nom pour supprimer la figure.#}
    <h1>{{ trick.name }}</h1>
    <p>Groupe : {{ trick.trickgroup.name }}</p>

    <div class="trick-description">
        {{ trick.description }}
    </div>

    {# liste photos #}
    <div class="trick-images">
        <ul>
        {% for img in listImages %}
            <li><img src="../../../../web/uploads/trick_img/{{ img.imageFile.fileName }}" alt="{{ img.imageName }}"></li>
        {% endfor %}
        </ul>
    </div>

    {# liste vidéos #}
    <div class="trick-videos">
        <ul>
            {% for vid in listVideos %}
                <li>{{ vid.embedCode|raw }}</li>
            {% endfor %}
        </ul>
    </div>

    {# liste commentaires #}
    <div class="trick-comments">
        <ul>
            {% for com in listComments %}
                <li>{{ com.content }}</li>
            {% endfor %}
        </ul>
    </div>

    {# form ajout commentaire si user connecté #}
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
        <div class="well">
            {{ form(form) }}
        </div>
    {% endif %}

    <p>
        <a href="{{ path('st_platform_homepage') }}" class="btn btn-default">
            <i class="glyphicon glyphicon-chevron-left"></i>
            Retour à la liste
        </a>
    </p>
{% endblock %}