{% extends "STPlatformBundle::layout.html.twig" %}

{% block title %}Supprimer un trick - {{ parent() }}{% endblock %}

{% block stplatform_body %}
    <div class="panel panel-default">
        <div class="panel-heading">
            <h1 class="panel-title">Supprimer un trick</h1>
        </div>
        <div class="panel-body">
            <p>ÃŠtes-vous certain de vouloir supprimer le trick "{{ trick.name }}" ?</p>

            <form action="{{ path('st_platform_delete', {'slug': trick.slug}) }}" method="post">
                <a href="{{ path('st_platform_view', {'slug': trick.slug}) }}" class="btn btn-default">
                    <i class="glyphicon glyphicon-chevron-left"></i>
                    Retour au trick
                </a>
                <input type="submit" value="Supprimer" class="btn btn-danger" />
                {{ form_rest(form) }}
            </form>
        </div>
    </div>
{% endblock %}